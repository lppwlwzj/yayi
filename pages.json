{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/login/login",
      "style": {
        "navigationStyle": "custom"
      }
    },

    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/zhibao/zhibao",
      "style": {
        "navigationBarTitleText": "",
        "enablePullDownRefresh": false,
        "navigationStyle": "custom"
      }
    },
    {
    	"path" : "pages/zbQuery/zbQuery",
    	"style" : 
    	{
    		"navigationBarTitleText" : "",
    		"enablePullDownRefresh" : false
    	}
    }
  ],
  "subPackages": [
    {
      "root": "sub_pages",
      "pages": [
        {
          "path": "preUpload/preUpload",
          "style": {
            "navigationStyle": "custom"
          }
        },
        {
          "path": "customerFiles/customerFiles",
          "style": {
            "navigationStyle": "custom"
          }
        },
        {
          "path": "admin/admin",
          "style": {
            "navigationBarTitleText": "",
            "navigationStyle": "custom"
          }
        },
        {
          "path": "afterService/afterService",
          "style": {
            "navigationBarTitleText": "",
            "enablePullDownRefresh": false,
            "navigationStyle": "custom"
          }
        },
        {
          "path": "backLogin/backLogin",
          "style": {
            "navigationBarTitleText": "",
            "onReachBottomDistance": 100,
            "navigationStyle": "custom"
          }
        },
        {
          "path": "afterSalesLogin/afterSalesLogin",
          "style": {
            "navigationBarTitleText": "",
            "onReachBottomDistance": 100,
            "navigationStyle": "custom"
          }
        },
        {
          "path": "add/add",
          "style": {
            "navigationBarTitleText": "",
            "onReachBottomDistance": 100,
            "navigationStyle": "custom"
          }
        },
        {
          "path": "myQuery/myQuery",
          "style": {
            "navigationStyle": "custom"
          }
        },
        {
          "path": "myQueryAdd/myQueryAdd",
          "style": {
            "navigationStyle": "custom"
          }
        }
      ]
    }
  ],
  "preloadRule": {
    "sub_pages/add/add": {
      "network": "all",
      "packages": ["__APP__"]
    },
    "sub_pages/myQueryAdd/myQueryAdd": {
      "network": "all",
      "packages": ["__APP__"]
    },
    "sub_pages/myQuery/myQuery": {
      "network": "all",
      "packages": ["__APP__"]
    },
    "sub_pages/afterSalesLogin/afterSalesLogin": {
      "network": "all",
      "packages": ["__APP__"]
    },
    "sub_pages/backLogin/backLogin": {
      "network": "all",
      "packages": ["__APP__"]
    },
    "sub_pages/admin/admin": {
      "network": "all",
      "packages": ["__APP__"]
    },
    "sub_pages/customerFiles/customerFiles": {
      "network": "all",
      "packages": ["__APP__"]
    },
    "sub_pages/preUpload/preUpload": {
      "network": "all",
      "packages": ["__APP__"]
    }
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    // "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#fff"
    // "backgroundColor": "#F8F8F8"，
  },
  "uniIdRouter": {}
}
